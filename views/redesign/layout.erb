    </div>
    <div id="top_container-admin"><i class="fa fa-bars fa-2x" aria-hidden="true"></i></div>
  </div>

  <div id="middle_container">
  </div>

  <div id="bottom_container">
    <form method="post" action="">
      <textarea id="bottom_container-postbox"></textarea>
      <input type="submit" id="bottom_container-submit">
    </form>
  </div>
</body>
